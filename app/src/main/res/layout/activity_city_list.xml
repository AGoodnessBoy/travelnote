<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ink.moming.travelnote.CityListActivity">

    <ink.moming.travelnote.ui.StickyRecyclerView
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="#ffffff"
        app:dividerColor="@color/lineColor"
        app:dividerHeight="1dp"
        app:titleColor="#f0f0f0"
        app:titleHeight="48dp"
        app:titleTextColor="@color/colorPrimary"
        >


    </ink.moming.travelnote.ui.StickyRecyclerView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_toolbar"
            android:layout_gravity="center"
            app:contentInsetStart="0dp"
            android:paddingLeft="16dp"
            app:title="@string/destination_choose_str"
            app:titleTextColor="@color/primaryTextColor"
            >

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
