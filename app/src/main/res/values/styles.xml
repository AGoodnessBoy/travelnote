<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="articleListTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="articleListSubTitle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="articleDetailTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="articleDetailsubTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="articleBody">
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
    </style>

</resources>
